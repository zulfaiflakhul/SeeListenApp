                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/hurufFJButton"
                app:layout_constraintStart_toStartOf="@+id/hurufFJButton"
                app:layout_constraintTop_toBottomOf="@+id/hurufFJButton" />

            <ImageView
