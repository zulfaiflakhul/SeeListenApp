            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/hurufAEButton"
                android:layout_width="86.25dp"
                android:layout_height="86.25dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_alfabet_permainan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBarAE"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:max="5"
                android:progress="0"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:background="@drawable/circle_shape"
                app:layout_constraintBottom_toBottomOf="@+id/hurufAEButton"
                app:layout_constraintEnd_toEndOf="@+id/hurufAEButton"
                app:layout_constraintStart_toStartOf="@+id/hurufAEButton"
                app:layout_constraintTop_toTopOf="@+id/hurufAEButton" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/ic_ceklistae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_ceklist"
                app:layout_constraintBottom_toBottomOf="@+id/progressBarAE"
                app:layout_constraintEnd_toEndOf="@+id/progressBarAE" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Huruf A-E"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/hurufAEButton"
                app:layout_constraintStart_toStartOf="@+id/hurufAEButton"
                app:layout_constraintTop_toBottomOf="@+id/hurufAEButton" />

            <ImageView
                android:id="@+id/hurufFJButton"
                android:layout_width="86.25dp"
                android:layout_height="86.25dp"
